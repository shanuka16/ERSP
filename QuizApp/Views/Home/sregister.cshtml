@model QuizApp.Models.student

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">

    <title>sregister</title>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">ERS</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="Index">Home <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="slogin">Student Login</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="sregister">Register</a>
                </li>

            </ul>
        </div>
    </nav>

    <div class="container">
        <div class="row">

            <div class="col-lg-8 col-md-8 col-sm-8">
                @if (ViewBag.msg != null)
                {
                    <div class="alert alert-danger">
                        <strong>Error ! </strong> @ViewBag.msg
                    </div>

                }



                <h2>Student Registeration</h2>
                <div class="card mx-auto" style="width: 50rem;">
                    <div class="card-body">

                        @using (@Html.BeginForm("sregister", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {

                            <div class="form-group">
                                <div class="row">
                                    <div class="col-md-4">
                                        <label for="std_name">User Name</label>
                                    </div>
                                    <div class="col-md-6 mx-auto">
                                        @Html.TextBoxFor(x => x.std_name, htmlAttributes: new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.std_name, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="row">
                                    <div class="col-md-4">
                                        <label for="std_password">Password</label>
                                    </div>
                                    <div class="col-md-6 mx-auto">
                                        @Html.PasswordFor(x => x.std_password, htmlAttributes: new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.std_password, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>


                            <div class="form-group">
                                <div class="row">
                                    <div class="col-md-4">
                                        <label for="imgfile">Image</label>
                                    </div>
                                    <div class="col-md-6 mx-auto">
                                        <input type="file" class="form-control btn btn-info" id="imgfile" name="imgfile" />
                                    </div>
                                </div>
                            </div>


                            <div class="form-group">
                                <div class="row">
                                    <div class="col-md-4">
                                        <label for="std_lname">Full Name :</label>
                                    </div>
                                    <div class="col-md-6 mx-auto">
                                        @Html.TextBoxFor(x => x.std_lname, htmlAttributes: new { @class = "form-control" })
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="row">
                                    <div class="col-md-4">
                                        <label for="std_mail">Email :</label>
                                    </div>
                                    <div class="col-md-6 mx-auto">
                                        @Html.TextBoxFor(x => x.std_mail, htmlAttributes: new { @class = "form-control" })
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="row">
                                    <div class="col-md-4">
                                        <label for="std_address">Address :</label>
                                    </div>
                                    <div class="col-md-6 mx-auto">
                                        @Html.TextBoxFor(x => x.std_address, htmlAttributes: new { @class = "form-control" })
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="row">
                                    <div class="col-md-4">
                                        <label for="std_contact">Contact :</label>
                                    </div>
                                    <div class="col-md-6 mx-auto">
                                        @Html.TextBoxFor(x => x.std_contact, htmlAttributes: new { @class = "form-control" })
                                    </div>
                                </div>
                            </div>


                            <div class="form-group">
                                <div class="mx-auto">
                                    <input type="submit" value="REGISTER" class="btn btn-default btn-block" />
                                </div>
                            </div>

                            <div>
                                <button class="btn btn-outline-primary">
                                    <div class="mx-auto">
                                        @Html.ActionLink("Login", "slogin")
                                    </div>
                                </button>
                            </div>
                         }

                    </div>
                </div>

                    
                </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-Fy6S3B9q64WdZWQUiU+q4/2Lc9npb8tCaSX9FK7E8HnRr0Jz8D6OP9dO5Vg3Q9ct" crossorigin="anonymous"></script>

</body>
</html>
