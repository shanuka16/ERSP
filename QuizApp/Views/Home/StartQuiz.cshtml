@model QuizApp.Models.tbl_questions

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>StartQuiz</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">

</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="ExamDashboard">ERS</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="ExamDashboard">Home </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="About">About</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="PredictHome">Predict</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="viewScores">Scores<span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="Contact">Contact</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="Article">Articles</a>
                </li>

            </ul>
            <form class="form-inline my-2 my-lg-0">
                <button class="btn btn-outline-danger my-2 my-sm-0" type="submit">@Html.ActionLink("LogOut", "LogOut", new { @class = "list-group-item" })</button>
            </form>
        </div>
    </nav><br /><br />

    <div class="container"><br />

        <div class="card mx-auto" style="width: 60rem;">
            <img src="../Content/web imgs/qstnw2.jpg" class="card-img-top" alt="...">
            <div class="card-body">

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="row">

                        <div class="col-md-10 mx-auto">

                            <div class="row">

                                <h2 class="card-title mx-auto">@Html.DisplayFor(x => x.q_text)</h2>
                            </div>
                            <br />
                            <br />
                            <br />

                            <div class="row">
                                <div class="col-md-1 mx-auto"><h5>@Html.RadioButtonFor(x => x.QA, Model.q_id)</h5></div>
                                <div class="col-md-11"><p>@Model.QA</p></div>
                                <br />
                            </div>

                            <div class="row">
                                <div class="col-md-1 mx-auto"><h5>@Html.RadioButtonFor(x => x.QB, Model.q_id)</h5></div>
                                <div class="col-md-11"><p>@Model.QB</p></div>
                                <br />
                            </div>
                            <div class="row">
                                <div class="col-md-1 mx-auto"><h5>@Html.RadioButtonFor(x => x.QC, Model.q_id)</h5></div>
                                <div class="col-md-11"><p>@Model.QC</p></div>
                                <br />
                            </div>
                            <div class="row">
                                <div class="col-md-1 mx-auto"><h5>@Html.RadioButtonFor(x => x.QD, Model.q_id)</h5></div>
                                <div class="col-md-11"><p>@Model.QD</p></div>
                                <br />
                                <br />
                            </div>

                            <div class="row" style="display:none">

                                @Html.TextBoxFor(x => x.QCorrectAns)

                            </div>
                            <div class="row">
                                <input type="submit" value="submit" class="btn btn-success form-control mx-auto " />
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

    </div>


    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-Fy6S3B9q64WdZWQUiU+q4/2Lc9npb8tCaSX9FK7E8HnRr0Jz8D6OP9dO5Vg3Q9ct" crossorigin="anonymous"></script>
</body>
</html>
