@model QuizApp.Models.student
@{
    Layout = null;
}
@{
    ViewBag.Title = "slogin";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">

    <title>slogin</title>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">ERS</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="Index">Home <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="slogin">Student Login</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="sregister">Register</a>
                </li>

            </ul>
        </div>
    </nav>


    <br/><br/>
    <div class="container">

        <div class="card mx-auto" style="width: 50rem;">
            <div class="card-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <h4>Login as Student</h4>

                        @if (ViewBag.msg != null)
                        {
                            <div class="alert alert-danger">
                                <strong>Error ! </strong> @ViewBag.msg
                            </div>
                        }
                        <hr />

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-4">
                                    <label for="exampleInputEmail1">User Name</label>
                                </div>
                                <div class="col-md-6 mx-auto">
                                    @Html.EditorFor(model => model.std_name, new { htmlAttributes = new { @class = "form-control", @id = "exampleInputEmail1" } })
                                    @Html.ValidationMessageFor(model => model.std_name, "", new { @class = "text-danger" })

                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-4">
                                    <label for="exampleInputPassword1">Password</label>
                                </div>
                                <div class="col-md-6 mx-auto">
                                    @Html.PasswordFor(model => model.std_password, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.std_password, "", new { @class = "text-danger", @id = "exampleInputPassword1" })
                                </div>
                            </div>
                        </div>


                        <div class="form-group">
                            <div class="mx-auto">
                                <input type="submit" value="LOGIN" class="btn btn-success  " />
                            </div>
                        </div>
                    </div>
                }

                <div>
                    <button class="btn btn-outline-primary">
                        <div class="mx-auto">
                            @Html.ActionLink("Register", "sregister")
                        </div>
                    </button>
                </div>
            </div>
        </div>



       


    </div>


    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }


    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-Fy6S3B9q64WdZWQUiU+q4/2Lc9npb8tCaSX9FK7E8HnRr0Jz8D6OP9dO5Vg3Q9ct" crossorigin="anonymous"></script>

</body>
</html>